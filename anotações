   n1 =50;
  printf ("Valor de n1 = %d \n",n1);

system ("pause"); //pausar  na tela - somente 	

  {char letra; //variavel do tipo 	char, contém caract
int x; //variável para o número inteiro 
float salario; //Float é usado para números com virgulas 
 
 
 //atribuindo valores para os 	variaveis
 
