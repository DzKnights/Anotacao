 //Saida de dadosna tela
 
 
 printf("letra = %c \n" , letra); //O %c é usado para char 
 printf("x = %d \n" , x); // O %d é usado para o int 
 printf("salario = %.2f \n" , salario); // O %f é usado para float,mas tmb poder usar o %.2f para deixar com menos casas decímais 
 
 int a,b,resto,r;// Essa montagem de programação é usado para uso de divissão ou soma ou subitração tanto fazso mudar os sinais.

printf ("\n Digite um numero:");
scanf("%d" , &a);
	
printf("\n Digite um numero:");	
scanf ("%d" , &b);	
		
r = a / b; 
printf("\n Resultado da divisao inteira de %d / %d =%d \n", a,b,r);	
	
resto = a % 2;
printf("\n Resultado da divisao = %d \n" , resto);	
}
 //Maneira de se usar de os sinais de soma divisão e subitração. 
 int v1 = 1; 
 int v2 = 2;
