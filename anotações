#include <stdio.h>//printf(), scanf()
#include <stdlib.h>//necessário para o systema ("pause")

int main () { //inicio do programa +

 int array[5] = {13, 27, 0, 2, 5}; // um array (ou vetor)é uma variável que pode armazenar diversos outros valores de acordo com seu tipo
 char nome [20]; //um array de caracteres é comumente chamado de string, em referencia a um tipo de variável de texto que existe em outras linguagens, mas não em C
 printf("Digite seu nome: "); 
scanf("%s" , nome);
printf("O nome armazenado foi: %s \n", nome );

 printf("Mordekaiser \n"); //o \n serve para deixar separado em outra linha 
  
  int n1 =10;
  
